<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wms.wmsjfx.application.inventory_screen.InventoryController">
    <!-- TableView inside AnchorPane with layout constraints -->
    <TableView fx:id="inventoryTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
         <TableColumn fx:id="colId" prefWidth="75.0" style="-fx-alignment: CENTER;" text="ID" />
         <TableColumn fx:id="colName" prefWidth="180.5714111328125" style="-fx-alignment: CENTER;" text="NAME" />
         <TableColumn fx:id="colQty" prefWidth="64.5714111328125" style="-fx-alignment: CENTER;" text="QUANTITY" />
         <TableColumn fx:id="colShelf" prefWidth="75.0" style="-fx-alignment: CENTER;" text="SHELF" />
         <TableColumn fx:id="colPosX" prefWidth="75.0" style="-fx-alignment: CENTER;" text="POSITION X" />
         <TableColumn fx:id="colPosY" prefWidth="75.0" style="-fx-alignment: CENTER;" text="POSITION Y" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</AnchorPane>
